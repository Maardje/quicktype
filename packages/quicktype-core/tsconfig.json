{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ESNext",
        "moduleResolution": "node",
        "lib": ["es6", "esnext.asynciterable", "dom"],
        "allowJs": true,
        "declaration": true,
        "strict": true,
        "outDir": "dist",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "baseUrl": "src",
        "skipLibCheck": true,
        "skipDefaultLibCheck": true
    }
}
